<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.domain.gaurav.carsfuelconsumption.Cars">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sort"
        android:paddingLeft="10dp"
        android:background="#ffd129" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:background="#ffd129"
            android:textColor="#4030ff"
            android:textStyle="bold"
            android:text="ORDER BY:" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:id="@+id/orderByYear"
            android:textSize="15dp"
            android:background="#ffd129"
            android:textColor="#4030ff"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make"
            android:id="@+id/orderByMake"
            android:textSize="15dp"
            android:background="#ffd129"
            android:textColor="#4030ff"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            android:id="@+id/orderByModel"
            android:textSize="15dp"
            android:background="#ffd129"
            android:textColor="#4030ff"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carsList"
        android:paddingLeft="10dp"
        android:layout_below="@+id/sort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
