                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="ELECTRICAL RANGE (KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_electricalRange"
                        android:text="UNKNOWN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:text="COMBINED RANGE (KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_combinedRange"
                        android:text="UNKNOWN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <!-- Inspired from: http://stackoverflow.com/questions/12524908/how-to-escape-in-xml -->
                    <TextView
                        android:id="@+id/TextView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="FUEL &amp; ELECTRICITY CONSUMPTION"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#4030ff">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="COMBINED (Le/100 KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/hybrid_combinedLE"
                        android:text="UNKNOWN"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="HYBRID CO2 EMISSION (G/KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_combinedCO2"
                        android:text="UNKNOWN"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:text="CITY (L/100 KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_city"
                        android:text="UNKNOWN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:text="HIGHWAY (L/100 KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_highway"
                        android:text="UNKNOWN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:text="COMBINE (L/100 KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_combine"
                        android:text="UNKNOWN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="5dip"
                        android:text="FUEL CO2 EMISSIONS (G/KM): "
                        android:textSize="20dip"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/hybrid_co2"
                        android:text="UNKNOWN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip" >
                    </TextView>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="Add to Favourite"
                android:id="@+id/add"
                android:onClick="addToFavourite"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
